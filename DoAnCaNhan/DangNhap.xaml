<Window x:Class="DoAnCaNhan.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnCaNhan"
        mc:Ignorable="d"
        Title="DangNhap" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="ĐĂNG NHẬP" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20"/>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <!-- Username -->
            <TextBox x:Name="UsernameTextBox" Width="250" Height="30" Margin="10" VerticalContentAlignment="Center" />
            <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0" Foreground="Gray" />

            <!-- Password -->
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30" Margin="10" VerticalContentAlignment="Center"/>
            <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0" Foreground="Gray" />

            <!-- Login Button -->
            <Button Content="Đăng Nhập" Width="250" Height="40" Margin="10" Click="LoginButton_Click"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock x:Name="StatusMessage" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" Margin="0,10"/>
    </Grid>
</Window>
