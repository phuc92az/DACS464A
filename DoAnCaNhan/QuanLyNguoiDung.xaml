<Window x:Class="DoAnCaNhan.QuanLyNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnCaNhan"
        mc:Ignorable="d"
        Title="QuanLyNguoiDung" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ KHÁCH HÀNG VÀ NHÂN VIÊN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Search -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
            <TextBox x:Name="txtTimKiem" Width="260" Height="26" VerticalAlignment="Center" 
                     ToolTip="Tìm theo tên, SDT hoặc email"/>
            <Button x:Name="btnTimKiem" Content="🔍 Tìm" Width="80" Margin="6,0,0,0" Click="btnTimKiem_Click"/>
            <ComboBox x:Name="cbLocVaiTro" Width="140" Margin="8,0,0,0" VerticalAlignment="Center" SelectionChanged="cbLocVaiTro_SelectionChanged">
                <ComboBoxItem Content="Tất cả"/>
                <ComboBoxItem Content="KhachHang"/>
                <ComboBoxItem Content="NhanVien"/>
            </ComboBox>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgNguoiDung" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10" SelectionMode="Single" SelectionChanged="dgNguoiDung_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MaNguoiDung}" Width="60"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding SoDienThoai}" Width="130"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding TenDangNhap}" Width="140"/>
                <DataGridTextColumn Header="Vai trò" Binding="{Binding VaiTro}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form nhập -->
        <GroupBox Grid.Row="3" Header="Chi tiết" Margin="0,10,0,0">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Họ tên:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHoTen" Grid.Row="0" Grid.Column="1" Margin="6,4"/>

                <TextBlock Text="Số điện thoại:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSDT" Grid.Row="0" Grid.Column="3" Margin="6,4"/>

                <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="6,4"/>

                <TextBlock Text="Tên đăng nhập:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTenDN" Grid.Row="1" Grid.Column="3" Margin="6,4"/>

                <TextBlock Text="Mật khẩu:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <PasswordBox x:Name="pwdMatKhau" Grid.Row="2" Grid.Column="1" Margin="6,4"/>

                <TextBlock Text="Vai trò:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbVaiTro" Grid.Row="2" Grid.Column="3" Margin="6,4">
                    <ComboBoxItem Content="KhachHang"/>
                    <ComboBoxItem Content="NhanVien"/>
                </ComboBox>

                <!-- Nút -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnThem" Content="➕ Thêm" Click="btnThem_Click" Width="90" Margin="6"/>
                    <Button x:Name="btnSua" Content="✏️ Sửa" Click="btnSua_Click" Width="90" Margin="6"/>
                    <Button x:Name="btnXoa" Content="🗑️ Xóa" Click="btnXoa_Click" Width="90" Margin="6"/>
                    <Button x:Name="btnMoi" Content="🔄 Làm mới" Click="btnMoi_Click" Width="90" Margin="6"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
